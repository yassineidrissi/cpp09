	@echo "\033[92mCREATING .O FILES AND exuctubel of $(NAME) âŒ›\033[0m"

all : $(NAME)

clean :
	@rm -f $(OBJ)
	@echo "\033[31m Delete object filesðŸ—‘\033[31m"
fclean : clean
	@rm -f $(NAME)
	@echo "\033[31m Delete exucted fileðŸ—‘\033[31m"
re : fclean all

run : re 
	@./${NAME}

.PHONY : all clean fclean re